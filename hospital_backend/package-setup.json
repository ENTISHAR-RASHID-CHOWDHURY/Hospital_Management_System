{
  "name": "hospital-backend-setup",
  "version": "1.0.0",
  "description": "Hospital Management System Backend Setup Script",
  "scripts": {
    "setup": "npm run setup:env && npm run setup:db && npm run setup:seed",
    "setup:env": "node -e \"if (!require('fs').existsSync('.env')) { require('fs').copyFileSync('.env.example', '.env'); console.log('Environment file created from .env.example'); } else { console.log('Environment file already exists'); }\"",
    "setup:db": "npx prisma db push && npx prisma generate",
    "setup:seed": "npx ts-node prisma/seed.ts",
    "dev": "concurrently \"npm run prisma:studio\" \"npm run server:dev\"",
    "server:dev": "nodemon src/server.ts",
    "prisma:studio": "npx prisma studio",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "express": "^4.19.2",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.4.1",
    "zod": "^3.23.8",
    "winston": "^3.15.0",
    "express-session": "^1.18.1",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/express": "^5.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/cors": "^2.8.17",
    "@types/express-session": "^1.18.0",
    "typescript": "^5.7.2",
    "ts-node": "^10.9.2",
    "nodemon": "^3.1.7",
    "prisma": "^6.16.3",
    "concurrently": "^9.1.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2"
  }
}